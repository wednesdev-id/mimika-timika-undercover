# Environment Variables for Indonesian News Viewer

# Application Settings
APP_NAME="Indonesian News API"
APP_VERSION="2.0.0"
DEBUG=false

# API Configuration
API_PREFIX="/api"
DOCS_URL="/docs"
REDOC_URL="/redoc"

# Data Settings
DATA_DIR="data"
TEMPLATES_DIR="templates"
STATIC_DIR="static"

# Vercel Specific Settings
VERCEL_ENV="production"
PYTHON_VERSION="3.9"

# News Scraping Settings (for full deployment)
# These are commented out for Vercel deployment
# SCRAPING_INTERVAL_HOURS=1
# ENABLE_SCHEDULER=true
# OUTPUT_FORMAT=csv
# SCHEDULER_MODE=daily
# SCHEDULER_TIME=08:00
# SCHEDULER_INTERVAL=60
# DATA_PATH=./data
# LOG_PATH=./logs
# REQUEST_TIMEOUT=10
# MIN_DELAY=1
# MAX_DELAY=3
# MAX_ARTICLES_PER_SECTION=10
# LOG_LEVEL=INFO

# External Services (if needed)
# NEWS_API_KEY=your_api_key_here
# DISCORD_WEBHOOK_URL=your_webhook_url_here